{
  "manifest_version": 3,
  "name": "Video PiP Shortcut",
  "description": "Adds a Picture‑in‑Picture overlay button and a customisable keyboard shortcut to HTML5 videos.",
  "version": "1.9",
  "permissions": ["storage"],
  "host_permissions": ["*://*/*"],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
